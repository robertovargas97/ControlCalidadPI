@model ControlCalidad.Models.Prueba

@*{
        ViewBag.Title = "Details";
    }*@

@{


    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card hoverable">
                <nav>
                    <div class="nav-wrapper black">
                        <p class="col s4">Quality Expert S.A</p>
                    </div>
                </nav>
                <div class="card-content black-text">
                    <div class="row">

                        <div class="col s12 margin-b1">
                            <p class="p-size">
                                <i class="material-icons left text-grey">Resultado final</i>
                                <span class="text-turq"> Categoria </span>
                                : @Html.DisplayFor(model => model.resultadoFinal)
                            </p>
                        </div>
                        <div class="col s12 margin-b1">
                            <p class="p-size">
                                <i class="material-icons left text-grey">Detalle del resultado</i>
                                <span class="text-turq"> Descripcion </span>
                                : @Html.DisplayFor(model => model.detalleResultado)
                            </p>
                        </div>





                    </div>
                </div>
                <div class="card-action center">
                    <a id="delete-btn" class="margin-r waves-effect btn red accent-4 red-hover modal-trigger" href="#modal1">Borrar</a>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.idPK, projectID = Model.id_proyectoFK, requirementID = Model.id_requerimientoFK }, new
                    {
                   @class = " margin-l waves-effect waves-light btn turq",
                        @id = "edit-btn"
               })
                </div>
            </div>
        </div>
    </div>

    <div class="fixed-action-btn">
        <a href="@Url.Action("Index", new { id = Model.id_requerimientoFK, projectId = Model.id_proyectoFK})" class="btn-floating btn-large black turq-hover left">
            <i class="large material-icons">arrow_back</i>
        </a>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
        <div class="row">
            <div class="">
                <nav>
                    <div class="nav-wrapper black">
                        <p class="col s4 offset-s5">Quality Expert S.A</p>
                    </div>
                </nav>
            </div>
        </div>

        <div class="modal-content ">
            <div class="row">
                <div class="col s2">
                    <i class="material-icons medium red-text text-darken-4">warning</i>
                </div>
                <div class="s8">
                    <h5>Está seguro que desea <span class="red-text text-darken-4 "> borrar </span> esta habilidad ?</h5>
                </div>
            </div>

            <div class="margin-b1">
                <hr />
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Aceptar", "RemoveTest" ,new { id = Model.idPK, project = Model.id_proyectoFK, requirement = Model.id_requerimientoFK }, new { @class = "waves-effect red-hover btn red accent-4" })
                <a class="modal-close btn waves-effect waves-light turq white-text">Cancelar</a>
            </div>
        </div>
    </div>
}


